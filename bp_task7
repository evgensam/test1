namespace ConsoleApp3
{
    internal class Program
    {
        static void Main(string[] args)
        {
            int appointmentDuration = 10;
            int minutesPerHour = 60;
            int numberOfElderlyLadies;
            int totalMinutesForElderlyLadies;

            Console.Write("Введите количество старушек: ");
            numberOfElderlyLadies = Convert.ToInt32(Console.ReadLine());

            // Вычисляем общее время после получения ввода
            totalMinutesForElderlyLadies = appointmentDuration * numberOfElderlyLadies;

            int hoursInQueue = totalMinutesForElderlyLadies / minutesPerHour;
            int minutesInQueue = totalMinutesForElderlyLadies % minutesPerHour;

            Console.WriteLine($"Вы должны отстоять в очереди {hoursInQueue} час(а/ов) и {minutesInQueue} минут(ы)");
            Console.ReadKey();
        }
    }
