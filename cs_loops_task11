using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Diagnostics.Contracts;
using System.Diagnostics.Eventing.Reader;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace CSLight
{
    internal class Program
    {
        static void Main(string[] args)
        {
            string enterSimbol;
            int lengtSimbol;
            char countSimbolA = '(';
            char countSimbolB = ')';
            int currentDepth = 0;
            int count = 0;
            int wrong = 0;

            Console.WriteLine("Введите символ открытия ( и символ закрытия ) в произвольном порядке, но каждый символ открытия" +
                " должен обязательно быть закрыт" + " выражение типа (()))( не должно работать" +
                " максимальная глубина должа быть не больше 3");
            enterSimbol = Console.ReadLine();
            lengtSimbol = enterSimbol.Length;
            Console.WriteLine("Длина строки " + lengtSimbol);

            for (int i = 0; i < lengtSimbol; i++)
            {
                if (enterSimbol[i] == countSimbolA)
                {
                    currentDepth++;
                    count++;
                    wrong++;

                }
                else if (enterSimbol[i] == countSimbolB)
                {
                    count--;
                }

                else if (count == 0)
                {
                    wrong++;
                }
            }
            for (int i = 0; i < lengtSimbol; i++)
            {
                if (count < 0 || count > 0)
                {
                    Console.ForegroundColor = ConsoleColor.Green;
                    Console.WriteLine(enterSimbol[i]);
                }
                    Console.ResetColor();
            }

            if (count < 0)
            {
                Console.WriteLine("Введено некорректное значение");
            }
            else if (count == 0)
            {
                Console.WriteLine("Все ок и глубина равна " + wrong);
            }
            else if (enterSimbol[0] == countSimbolB)
            {
                Console.WriteLine("Первый символ не может начинаться с" + countSimbolB);
            }

            Console.ReadKey();
        }
    }
}
