using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Diagnostics.Contracts;
using System.Diagnostics.Eventing.Reader;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace CSLight
{
    internal class Program
    {
        static void Main(string[] args)
        {
            string enterSimbol;
            int lengtSimbol;
            int countSimbolA =0;
            int countSimbolB = 0;
            int count = 0;

            Console.WriteLine("Введите символ открытия ( и символ закрытия ) в произвольном порядке, но каждый символ открытия" +
                " должен обязательно быть закрыт");
            enterSimbol = Console.ReadLine();
            lengtSimbol = enterSimbol.Length;
            Console.Write(lengtSimbol);


            for (int i = 0; i < lengtSimbol; i++)
            {
                if (enterSimbol[i] == '(')
                {
                    countSimbolA++;
                }
                else if (enterSimbol[i] == ')')
                {
                    countSimbolB++;
                }

            }

            for (int i = 0; i < lengtSimbol; i++)
            {
              if (i != lengtSimbol-1 && enterSimbol[i + 1] != ')')
              count++;
              Console.WriteLine(count);

            }

            if (countSimbolA == countSimbolB && countSimbolA !=0 && countSimbolB !=0)
                {
                Console.WriteLine("Все ок и глубина равна " + count);
                }
            else
            {
                Console.WriteLine("Вы ввели некорректные символы");
            }
           
            Console.ReadKey();
        }
    }
}
