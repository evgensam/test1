            string enterSimbol;
            int lengtSimbol;
            char countSimbolA = '(';
            char countSimbolB = ')';
            int count = 0;
            int wrong = 0;

            Console.WriteLine("Введите символ открытия ( и символ закрытия ) в произвольном порядке, но каждый символ открытия" +
                " должен обязательно быть закрыт" + " выражение типа (()))( не должно работать" +
                " максимальная глубина должа быть не больше 3");
            enterSimbol = Console.ReadLine();
            lengtSimbol = enterSimbol.Length;

            for (int i = 0; i < lengtSimbol; i++)
            {
                if (enterSimbol[i] == countSimbolA)
                {
                    count++;
                }
                else if (enterSimbol[i] == countSimbolB)
                {
                    if (i != lengtSimbol - 1 && enterSimbol[i + 1] != countSimbolA)
                    {
                        count--;
                        wrong++;
                    }
                }
            }
            
            if (count > 0) 
            {
                Console.WriteLine("Все верно и глубина " + (wrong +1) + " для строки " + enterSimbol);
            }
            else if (count <0)
            {
                Console.WriteLine("Ошибка в строке");
            }
            
            Console.ReadKey();
