using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Diagnostics.Contracts;
using System.Diagnostics.Eventing.Reader;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace CSLight
{
    internal class Program
    {
        static void Main(string[] args)
        {
            string enterSimbol;
            int lengtSimbol;
            char countSimbolA = '(';
            char countSimbolB = ')';
            int currentDepth = 0;
            int count = 0;
            int wrong = 0;
            char wrongSimbol;

            Console.WriteLine("Введите символ открытия ( и символ закрытия ) в произвольном порядке, но каждый символ открытия" +
                " должен обязательно быть закрыт");
            enterSimbol = Console.ReadLine();
            lengtSimbol = enterSimbol.Length;
            Console.WriteLine("Длина строки " + lengtSimbol);

            //(()))(
            for (int i = 0; i < lengtSimbol; i++)
            {
                if (enterSimbol[i] == countSimbolA)
                {
                    currentDepth++;
                    count++;
                    Console.ForegroundColor = ConsoleColor.Green;
                    Console.WriteLine(countSimbolA);

                }
                else if (enterSimbol[i] == countSimbolB)
                {
                    currentDepth--;
                }
                else if (count <0 )
                {
                    Console.ForegroundColor = ConsoleColor.Green;
                    Console.WriteLine(enterSimbol[i]);
                }
            }

            //for (int i = 1; i < lengtSimbol; i++)
            //{
            //    if (enterSimbol[i] == countSimbolB && enterSimbol[i + 1] == countSimbolA)
            //    {
            //        Console.WriteLine("Выражение некорректно");
            //        wrong++;
            //        Console.WriteLine(enterSimbol);
            //        Console.ForegroundColor = ConsoleColor.Green;
            //        Console.Write(countSimbolB + countSimbolA);
            //        Console.ResetColor();
            //        break;
            //    }
            //}

            if (currentDepth < 0)
            {
                Console.WriteLine("Введено некорректное значение");
            }
            else if (wrong == 0)
            {
                Console.WriteLine("Все ок и глубина равна " + count);
            }
            Console.ReadKey();
        }
    }
}
