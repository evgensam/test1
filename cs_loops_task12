                            Console.WriteLine();

                        }
                        break;
                    case EarthMage:
                        for (int i = 0; i < heros.GetLength(0); i++)
                        {
                            Console.Write(herosName[i, chosenClass - 1]);
                            Console.Write(" " + heros[i, chosenClass - 1]);
                            Console.WriteLine();

                        }
                        break;
                    case Exit:
                        isOpen = false;
                        break;
                    default:
                        Console.WriteLine("Выбрано некоррекное значение, укажите правильнгый пункт меню");
