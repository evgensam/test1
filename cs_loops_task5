float rub = 150000;
float usd = 7900;
float eur = 7500 + 1700;

int rubleСhoice = 1;
int usdChoice = 2;
int eurChoece = 3;
int exitChoce = 4;

float convertToUSD = 69;
float convertToEUR = 75;
float outputKurs;
float imputKurs;
float inputAmountMony;

Console.WriteLine("Ваш баланс: " + rub + " рублей" + usd +
    " долларов" + eur + " евро");

Console.WriteLine("Выбирете кошелек с которого хотите обменять");
Console.WriteLine("1 - рубли");
Console.WriteLine("2 - доллары");
Console.WriteLine("3 - евро");
Console.WriteLine("4 - выход");
outputKurs = Convert.ToSingle((Console.ReadLine()));

while (outputKurs >= rubleСhoice && outputKurs < exitChoce)
{
    Console.WriteLine("Выбирете валюту на которую хотите обменять:");
    Console.WriteLine("1 - рубли");
    Console.WriteLine("2 - доллары");
    Console.WriteLine("3 - евро");
    Console.WriteLine("4 - выход");
    imputKurs = Convert.ToSingle((Console.ReadLine()));
    Console.WriteLine("Введите количество денег к обмену");
    inputAmountMony = Convert.ToSingle((Console.ReadLine()));

    if (outputKurs == rubleСhoice && imputKurs == usdChoice)
    {
        rub -= inputAmountMony;
        usd += inputAmountMony / convertToUSD;
        Console.WriteLine("Рубли: " + rub);
        Console.WriteLine("Доллары: " + usd);
    }

    else if (outputKurs == rubleСhoice && imputKurs == eurChoece)
    {
        rub -= inputAmountMony;
        eur += inputAmountMony / convertToEUR;
        Console.WriteLine("Рубли: " + rub);
        Console.WriteLine("Евро: " + eur);
    }

    else if (outputKurs == usdChoice && imputKurs == rubleСhoice)
    {
        usd -= inputAmountMony;
        rub += inputAmountMony * convertToUSD;
        Console.WriteLine("Доллары: " + usd);
        Console.WriteLine("Рубли: " + rub);
    }

    else if (outputKurs == usdChoice && imputKurs == eurChoece)
    {
        usd -= inputAmountMony;
        eur += inputAmountMony * convertToEUR;
        Console.WriteLine("Доллары: " + usd);
        Console.WriteLine("Евро: " + eur);
    }

    Console.WriteLine("Выбирете кошелек с которого хотите обменять");
    Console.WriteLine("1 - рубли");
    Console.WriteLine("2 - доллары");
    Console.WriteLine("3 - евро");
    Console.WriteLine("4 - выход");
    outputKurs = Convert.ToSingle((Console.ReadLine()));
}
