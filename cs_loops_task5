 float numberOfRub = 150000;
            float numberOfUsd = 7900;
            float numberOfEur = 7500 + 1700;

            int choiceRub = 1;
            int choiceUsd = 2;
            int choiceEur = 3;
            int choiceExit = 4;

            float convertRubToUsd = 74;
            float convertRubToEur = 79;
            float rubExchangeRate = 1;
            float rubExchangeUsd = rubExchangeRate / convertRubToUsd;
            float rubExchangeEur = rubExchangeRate / convertRubToEur;
            float UsdExchangeEur = convertRubToUsd / convertRubToEur;
            float EurExchangeUSD = convertRubToEur / convertRubToUsd;
            float outputExchangeRate = 1;
            float imputExchangeRate = 1;
            float inputAmountMoney = 1;


            while (imputExchangeRate != choiceExit || outputExchangeRate != choiceExit)
            {
                Console.WriteLine("Ваш баланс: " + numberOfRub + " рублей" + numberOfUsd +
" долларов" + numberOfEur + " евро");

                Console.WriteLine("Выбирете кошелек с которого хотите обменять");
                Console.WriteLine(choiceRub + " - рубли");
                Console.WriteLine(choiceUsd + " - доллары");
                Console.WriteLine(choiceEur + " - евро");
                Console.WriteLine(choiceExit + " - выход");
                outputExchangeRate = Convert.ToSingle((Console.ReadLine()));
                if (outputExchangeRate < choiceRub || outputExchangeRate > choiceExit)
                {
                    Console.WriteLine("Некоректный ввод");
                    break;

                }

                else if (outputExchangeRate > choiceRub || outputExchangeRate < choiceExit)
                {
                    Console.WriteLine("Выбирете валюту на которую хотите обменять:");
                    Console.WriteLine(choiceRub + " - рубли");
                    Console.WriteLine(choiceUsd + " - доллары");
                    Console.WriteLine(choiceEur + " - евро");
                    Console.WriteLine(choiceExit + " - выход");
                    imputExchangeRate = Convert.ToSingle((Console.ReadLine()));                  
                }
                
                else if (imputExchangeRate < choiceRub || imputExchangeRate > choiceExit)
                {
                    Console.WriteLine("Некоректный ввод");
                    break;

                }



                else if (imputExchangeRate > choiceRub || imputExchangeRate < choiceExit)
                {
                    Console.WriteLine("Введите количество денег к обмену");

                    inputAmountMoney = Convert.ToSingle((Console.ReadLine()));
                }


                else if (inputAmountMoney > numberOfRub && inputAmountMoney > numberOfUsd && inputAmountMoney > numberOfEur)
                {
                    Console.WriteLine("На вашем балансе недостаточно денег");
                }
                else if (outputExchangeRate == choiceRub && imputExchangeRate == choiceUsd)
                {
                    numberOfRub -= inputAmountMoney;
                    numberOfUsd += inputAmountMoney * rubExchangeUsd;
                    Console.WriteLine("Рубли: " + numberOfRub);
                    Console.WriteLine("Доллары: " + numberOfUsd);
                }
                else if (outputExchangeRate == choiceRub && imputExchangeRate == choiceEur)
                {
                    numberOfRub -= inputAmountMoney;
                    numberOfEur += inputAmountMoney * rubExchangeEur;
                    Console.WriteLine("Рубли: " + numberOfRub);
                    Console.WriteLine("Евро: " + numberOfEur);
                }
                else if (outputExchangeRate == choiceUsd && imputExchangeRate == choiceRub)
                {
                    numberOfUsd -= inputAmountMoney;
                    numberOfRub += inputAmountMoney * convertRubToUsd;
                    Console.WriteLine("Доллары: " + numberOfUsd);
                    Console.WriteLine("Рубли: " + numberOfRub);
                }
                else if (outputExchangeRate == choiceUsd && imputExchangeRate == choiceEur)
                {
                    numberOfUsd -= inputAmountMoney;
                    numberOfEur += inputAmountMoney * UsdExchangeEur;
                    Console.WriteLine("Доллары: " + numberOfUsd);
                    Console.WriteLine("Евро: " + numberOfEur);
                }
                else if (outputExchangeRate == choiceUsd && imputExchangeRate == choiceRub)
                {
                    numberOfUsd -= inputAmountMoney;
                    numberOfRub += inputAmountMoney * convertRubToUsd;
                    Console.WriteLine("Доллары: " + numberOfUsd);
                    Console.WriteLine("Рубли: " + numberOfRub);
                }
                else if (outputExchangeRate == choiceEur && imputExchangeRate == choiceRub)
                {
                    numberOfEur -= inputAmountMoney;
                    numberOfRub += inputAmountMoney * convertRubToEur;
                    Console.WriteLine("Доллары: " + numberOfUsd);
                    Console.WriteLine("Евро: " + numberOfEur);
                }
                else if (outputExchangeRate == choiceEur && imputExchangeRate == choiceUsd)
                {
                    numberOfEur -= inputAmountMoney;
                    numberOfUsd += inputAmountMoney * EurExchangeUSD;
                    Console.WriteLine("Доллары: " + numberOfUsd);
                    Console.WriteLine("Евро: " + numberOfEur);
                }
                else if (outputExchangeRate == choiceEur && imputExchangeRate == choiceUsd)
                {
                    numberOfEur -= inputAmountMoney;
                    numberOfUsd += inputAmountMoney * EurExchangeUSD;
                    Console.WriteLine("Доллары: " + numberOfUsd);
                    Console.WriteLine("Евро: " + numberOfEur);
                }
                }
                Console.ReadKey();
            }
