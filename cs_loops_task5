using System;
using System.Collections.Generic;
using System.Diagnostics.Eventing.Reader;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace CSLight
{
    internal class Program
    {
        static void Main(string[] args)
        {
            float numberOfRub = 150000;
            float numberOfUsd = 8000;
            float numberOfEur = 9000;

            float choiceRub = 1;
            int choiceUsd = 2;
            int choiceEur = 3;
            int choiceExit = 4;

            float convertRubToUsd = 74;
            float convertRubToEur = 79;
            float rubExchangeRate = 1;
            float rubExchangeUsd = rubExchangeRate / convertRubToUsd;
            float rubExchangeEur = rubExchangeRate / convertRubToEur;
            float UsdExchangeEur = convertRubToUsd / convertRubToEur;
            float EurExchangeUSD = convertRubToEur / convertRubToUsd;
            float outputExchangeRate = 1;
            float imputExchangeRate = 1;
            float inputAmountMoney;


            while (imputExchangeRate != choiceExit || outputExchangeRate != choiceExit)
            {
                Console.WriteLine("Ваш баланс: " + numberOfRub + " рублей" + numberOfUsd +
" долларов" + numberOfEur + " евро");

                Console.WriteLine("Выбирете кошелек с которого хотите обменять");
                Console.WriteLine(choiceRub + " - рубли");
                Console.WriteLine(choiceUsd + " - доллары");
                Console.WriteLine(choiceEur + " - евро");
                Console.WriteLine(choiceExit + " - выход");
                outputExchangeRate = Convert.ToSingle((Console.ReadLine()));

                switch (outputExchangeRate)
                {
                    case '1':
                    case '2':
                    case '3':
                        Console.WriteLine("Выбор выполнен успешно");
                        break;
                    default:
                        Console.WriteLine("Выбрано некоррекное значение");
                        break;
                }

                Console.WriteLine("Выбирете валюту на которую хотите обменять:");
                Console.WriteLine(choiceRub + " - рубли");
                Console.WriteLine(choiceUsd + " - доллары");
                Console.WriteLine(choiceEur + " - евро");
                Console.WriteLine(choiceExit + " - выход");
                imputExchangeRate = Convert.ToSingle((Console.ReadLine()));

                switch (imputExchangeRate)
                {
                    case '1':
                        if (outputExchangeRate == 1)
                        {
                            Console.WriteLine("Нельзя менять рубль на рубль");
                        }

                        if (outputExchangeRate == 2)
                        {
                            Console.WriteLine("Выбор выполнен успешно");
                            Console.WriteLine("Введите количество денег к обмену");
                            inputAmountMoney = Convert.ToSingle((Console.ReadLine()));
                            if (inputAmountMoney > numberOfRub && inputAmountMoney > numberOfUsd)
                            {
                                numberOfRub -= inputAmountMoney;
                                numberOfUsd += inputAmountMoney * rubExchangeUsd;
                                Console.WriteLine("Обмен выплолнен успешно, ваш баланс:");
                                Console.WriteLine("Рубли: " + numberOfRub);
                                Console.WriteLine("Доллары: " + numberOfUsd);
                                Console.WriteLine("Доллары: " + numberOfEur);
                            }
                            else if (inputAmountMoney < numberOfRub && inputAmountMoney < numberOfUsd)
                            {
                                Console.WriteLine("У вас недостаточно рублей");

                            }
                            if (outputExchangeRate == 3)
                            {
                                Console.WriteLine("Выбор выполнен успешно");
                                Console.WriteLine("Введите количество денег к обмену");
                                inputAmountMoney = Convert.ToSingle((Console.ReadLine()));
                                if (outputExchangeRate == choiceRub && imputExchangeRate == choiceEur)
                                {
                                    numberOfRub -= inputAmountMoney;
                                    numberOfEur += inputAmountMoney * rubExchangeEur;
                                    Console.WriteLine("Обмен выплолнен успешно, ваш баланс:");
                                    Console.WriteLine("Рубли: " + numberOfRub);
                                    Console.WriteLine("Доллары: " + numberOfUsd);
                                    Console.WriteLine("Доллары: " + numberOfEur);
                                }
                                else if (inputAmountMoney < numberOfRub && inputAmountMoney < numberOfEur)
                                {
                                    Console.WriteLine("У вас недостаточно рублей");

                                }
                            }

                        }
                        break;

                }
            }
            Console.ReadKey();
        }
    }
}
