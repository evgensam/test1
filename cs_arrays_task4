string number;
            int enterNumber;
            string sum = "sum";
            int count = 0;
            int[] array = new int[count];
            string exit = "exit";
            bool isOpen = true;

            while (isOpen)
            {
                Console.WriteLine("Значение массива");
                
                for (int i = 0;i<array.Length-1;i++)
                {
                    Console.Write(array[i] + " ");
                }
                
                Console.WriteLine();
                Console.WriteLine("Введите число/sum/exit");
                number = Console.ReadLine();
                count += 1;
                
                if (number != sum && number != exit)
                {
                    enterNumber = Convert.ToInt32(number);
                    int[] tempArray = new int[count + 1];
                    
                    for (int i = 0; i < array.Length; i++)
                    {
                        tempArray[i] = array[i];
                        Console.WriteLine("значение" + array[i] + " ");
                    }
                    
                    Console.WriteLine();
                    Console.WriteLine("Размер массива" + count);
                    tempArray[count - 1] = enterNumber;
                    array = tempArray;                    
                }
                else if (number == sum)
                {
                    int total = 0;
                    
                    for (int i = 0; i < array.Length; i++)
                    {
                        
                        total += array[i];
                    }
                    
                    Console.WriteLine("Сумма введенных чисел равно " + total);
                }
                else if (number == exit)
                {
                    isOpen = false;
                }
                else
                {
                    Console.WriteLine("Ошибка");
                }

                Console.WriteLine();
                Console.WriteLine("Длина массива array " + array.Length + " нажмите люую кнопку");
                Console.ReadKey();
